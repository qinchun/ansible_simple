- name: Jenkins
  hosts: jenkins
  tasks:
    - name: write the apache config file
      template: src=/srv/httpd.j2 dest=/etc/httpd.conf
      notify:
      - restart apache
    - name: ensure apache is running
      service: name=httpd state=started
  handlers:
    - name: restart apache
      service: name=httpd state=restarted
  #roles:
  #  - ansible-jenkins
   
  
